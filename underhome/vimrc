function DoMyPrint(args)
	 let colorsave=g:colors_name
	  " >>---Modified by ShiliangShan--- 
	  "the next line seems works before
	  "color print
	   " <<-Wed Aug 25 18:45:39 ADT 2010- 
	   exec "hardcopy ".a:args
	    exec 'color '.colorsave
endfunction

