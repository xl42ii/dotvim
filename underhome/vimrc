:inoremap ( ()<++><ESC>hhhhi
:inoremap ) <c-r>=ClosePair(')')<CR>
:inoremap { {}<++><ESC>hhhhi
:inoremap } <c-r>=ClosePair('}')<CR>
:inoremap [ []<++><ESC>hhhhi
:inoremap ] <c-r>=ClosePair(']')<CR>

function ClosePair(char)
if getline('.')[col('.') - 1] == a:char
return "\<Right>"
else
return a:char
endif
endf








